{
    "name": "repman-io/composer-plugin",
    "type": "composer-plugin",
    "description": "Plugin for Repman - PHP Repository Manager",
    "license": "MIT",
    "authors": [
        {
            "name": "Arkadiusz Kondas",
            "email": "arkadiusz.kondas@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "composer-plugin-api": "^2.0"
    },
    "require-dev": {
        "composer/composer": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpstan/phpstan": "^0.12.5",
        "phpunit/phpunit": "^8.5"
    },
    "extra": {
        "class": "Buddy\\Repman\\Composer\\Repman"
    },
    "autoload": {
        "psr-4": {
            "Buddy\\Repman\\Composer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Buddy\\Repman\\Composer\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "check-cs": [
            "php-cs-fixer fix --dry-run --diff"
        ],
        "fix-cs": [
            "php-cs-fixer fix"
        ],
        "phpstan": [
            "phpstan analyse src --level=max"
        ],
        "phpunit": [
            "phpunit --colors=always"
        ],
        "tests": [
            "@check-cs",
            "@phpstan",
            "@phpunit",
            "cd tests-plugin && composer install"
        ]
    }
}
